#include <bits/stdc++.h>
#define int long long
using namespace std;
void solve (){
  int n ;
  cin >> n ;
  vector <int > a (n);
  int c = 0 ,k = 0;
  for (int i = 0 ; i < n ; i++){
    cin >> a[i];
    
    if (a[i] == 0){
      c++;
    }
    if (a[i]== -1){
      k++;
    }
  }
    if (k%2==1){
      c+=2;
    }
    cout << c <<endl;
 
  
};


signed  main() {

    int t ;
    cin >> t;
    while (t--){
      solve ();
        
       
    }
}
